# Vector Configuration

[general]
  name = "example_vector_instance"
  data_dir = "/var/lib/vector"
  log_dir = "/var/log/vector"
  persist_dir = "/var/lib/vector/persist"
  tmp_dir = "/var/lib/vector/tmp"

[sources]
  [sources.example_log]
    type = "file"
    include = ["/path/to/your/logfile.log"]

[pipelines]
  [pipelines.example_pipeline]
    source = "example_log"
    destination = "example_destination"

[destinations]
  [destinations.example_destination]
    type = "stdout"
